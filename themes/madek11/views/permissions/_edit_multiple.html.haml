- if @media_entries
  = form_tag update_multiple_permissions_media_entries_path, :method => :put do
    = hidden_field_tag :media_entry_ids, @media_entries.map(&:id).join(',')
    = render :partial => "/permissions/table", :locals => {:cancel_path => session[:return_to]}
- elsif @resource && @resource.is_a?(MediaEntry)
  = form_tag update_multiple_permissions_media_entries_path, :method => :put do
    = hidden_field_tag :media_entry_ids, @resource.id
    = render :partial => "/permissions/table", :locals => {:cancel_path => media_entry_path(@resource) }
- else
  = form_tag update_multiple_permsissions_media_set_path(@media_set), :method => :put do
    = render :partial => "/permissions/table", :locals => {:cancel_path => media_set_path(@media_set) }


%script{:type => "text/x-jquery-tmpl", :id => "new_permission"}
  %tr
    %td
      ${name}    
