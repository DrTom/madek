.line
  .remove
    .button{:title => "Entfernen"}= "—"
  .subject{:title => "${name}"}
    {{if name}}
    {{if name.length>27}}
    ${name.slice(0,17)}...${name.slice(name.length-12,name.length-1)}
    {{else}}
    ${name}
    {{/if}}
    {{/if}}
    {{if $item.is_public}}
    = "Öffentlichkeit"
    {{/if}}
  .owner
    {{if $item.with_owner}}
    %label
      %input{:type => "radio", :id => "owner_${id}", :name => "owner_${id}"}
    {{/if}}
    
  .preset
    .select
      = "(Angepasst)"
    .arrow
    %select
      {{if sessionStorage.permission_presets}}
      {{each(i, preset) JSON.parse(sessionStorage.permission_presets)}}
      %option{:value => "${preset.name}", :"data-preset" => "${JSON.stringify(preset)}"}= "${preset.name}"
      {{/each}}
      {{/if}}
      
  .permissions
  
    {{if view}}
    {{if JSON.stringify(view)==JSON.stringify($item.media_resource_ids)}}
    %label.view.permission{:title => "Betrachten"}
      = check_box_tag 'view', "true", true
    {{else}}
    {{if view.length>0}}
    %label.view.permission.mixed{:title => "Betrachten"}
      = check_box_tag 'view'
    {{else}}
    %label.view.permission{:title => "Betrachten"}
      = check_box_tag 'view'
    {{/if}}
    {{/if}}
    {{/if}}
    
    {{if download}}
    {{if JSON.stringify(download)==JSON.stringify($item.media_resource_ids)}}
    %label.download.permission{:title => "Download Original"}
      = check_box_tag 'download', "true", true
    {{else}}
    {{if download.length>0}}
    %label.download.permission.mixed{:title => "Download Original"}
      = check_box_tag 'download'
    {{else}}
    %label.download.permission{:title => "Download Original"}
      = check_box_tag 'download'
    {{/if}}
    {{/if}}
    {{/if}}
    
