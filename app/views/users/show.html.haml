%script{:type => "text/x-jquery-tmpl", :id => "media_entry_index_without_checkbox"}
  %div.item_box{:id => "thumb_${id}"}
    %div.item_permission
      {{if is_public}}
      .icon_status_perm_public
      {{else is_private}}
      .icon_status_perm_private
      {{/if}}
    %a{:href => "/media_entries/${id}"}
      %div.thumb_box
        %img{:src => "${thumb_base64}"}
    %p.item_title
      ${title.substring(0,29)}
    %p.item_author
      ${author.substring(0,18)}
    .actions
      .action_left
        %span.favorite_link{:id => "fav_${id}", :title => "Favorit"}
          %a{:href => "/media_entries/${id}/toggle_favorites", :"data-remote" => true, :"data-type" => "html", :"data-method" => :post}
            {{if is_favorite}}
            .button_favorit_on
            {{else}}
            .button_favorit_off
            {{/if}}
        {{if can_maybe_browse}}    
        %span.explore_link{:id => "exp_${id}"}
          %a{:href => "/media_entries/${id}/browse", :title => "Erkunden"}
            .button_explore
        {{else}}
        .button_explore.ghost
        {{/if}}
      .action_right
        {{if is_editable}}
        %a{:href => "/media_entries/${id}/edit", :title => "Editieren"}
          .button_edit_active
        {{else}}
        .button_edit_active.ghost
        {{/if}}
        {{if is_manageable}}
        %a{:href => "/media_entries/${id}", :title => "Löschen", :"data-method" => :delete, :"data-confirm" => "Sind Sie sicher?"}
          .button_delete_active
        {{else}}
        .button_delete_active.ghost
        {{/if}}

