<%= content_tag :table do
	a = content_tag :tr do
        [_("Login"),
         _("Email"),
         _("Name"),
         _("Total MediaEntries"),
         _("Groups"),
		 ""].collect do |s|
          content_tag :th do
            s  
          end
        end.join.html_safe
	end
	@users.each_with_index do |user, index|
		a += content_tag :tr, :class => ((index % 2).zero? ? "even" : "odd") do
	        c = [user.login,
	         user.email,
	         user.name,
	         user.media_entries.count,
	         user.groups.join(', ').html_safe].collect do |s|
	          content_tag :td do
	            s  
	          end
	        end.join.html_safe
			c += content_tag :td, :class => "with_actions" do
				b = link_to(_("Edit"), edit_admin_user_path(user), :class => "buttons", :"data-remote" => true)
				b += link_to _("Switch to"), switch_to_admin_user_path(user), :class => "buttons"
			end
		end
	end
	a
end %>
