  .item_box
    .thumb_box

%script#empty_result_page{:type => "text/x-jquery-tmpl"}
  .page{:"data-page" => "${pagination.current_page}", :"data-url" => "${url}"}
    {{tmpl(pagination) "#pagination"}}
    {{tmpl(entries) "#empty_index"}}

