          %h3.title-s.stepline-item-title
            3. Metadaten ergänzen
        .stepline-item
          %h3.title-s.stepline-item-title
            4. Medien zusammenstellen

      .media-import.step4.pal

        %h3.title-l Fotos, Videos und Audiofiles in Sets verwalten (optional):

        .container.clearfix.mvl.bordered.midtone.roundend.upload-overview
          %ul.media-entries.grid
            %li.media-entries-item
              .thumbnail-wrapper.media-entry
                .thumbnail-audio.thumbnail
                  %img{:alt => "", :src => "/assets/redesign/thumbnails/tmp-thumb-large.jpg"}
                .thumbnail-metadata
                  %h3.title-s.thumbnail-name Name that can easily go onto 2 lines
                  %h4.title-xs-alt.thumbnail-author Author that can easily go onto 2 lines as well
            %li.media-entries-item
              .thumbnail-wrapper.media-entry
                .thumbnail-video.thumbnail
                  %img{:alt => "Thumb-video", :src => "/assets/redesign/thumbnails/thumb-video-mov.png"}
