.app-content-wrapper.container.view-media-import

  // Header

  %header.app-header.container.inverted
    .header-brand-area
      %a.header-brand-logo{:href => "#"}
        %img{:alt => "Image-logo-zhdk", :src => "/assets/redesign/inserts/image-logo-zhdk.png"}
      %h1.header-brand-name Z&uuml;rcher Hochschule der K&uuml;nste
      %h2.header-instance-name Medienarchiv der K&uuml;nste
    %ul.header-menu.large.primary.tab-navigation
      %li.tab-navigation-item
        %a{:href => "#"} Mein Archiv
      %li.tab-navigation-item
