<% content_for :pages do %>
	<%= content_tag :div, :style => "padding: 5px; margin-top: 2px; text-align: center;" do
		will_paginate @media_entries, :previous_label => _("Zurück"), :next_label => _("Weiter") unless @disabled_paginator
	end %>
<% end %>

<%= content_tag :div, :id => "results" do %>
	<%= yield :pages %>
	<%= yield :actions %>
	
	<% params[:page] ||= 1 %>
	<%= content_tag :ul, :class => "items", :style => "margin: 1em; min-height: 10em;" do %>
		<% unless @media_entries.empty? %>
			<%= render :partial => "/media_entries/media_entry_thumb", :collection => @media_entries, :as => :media_entry %>
		<% else %>
			<%= _("Keine Medieneinträge gefunden") %>
		<% end
	end %>

	<%= yield :pages %>
<% end %>
