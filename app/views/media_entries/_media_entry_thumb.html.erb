<%= content_tag :li, :media_entry_id => media_entry.id do

	a = content_tag :div, :style => "text-align: center;" do
		link_to thumb_for(media_entry), media_entry_path(media_entry)
	end

	a += content_tag :p, :style => "font-size: 12px; text-align: center" do
		title = media_entry.meta_data.get_value_for("title")
      	author = media_entry.meta_data.get_value_for("author")
		b = "".html_safe

		unless title.blank?
			b += content_tag :span, :style => "font-weight: bold" do
				truncate(title, :length => 36)
			end
			b += tag :br
		end

		unless author.blank?
		 	b += content_tag :i do
				truncate(author, :length => 18)
			end
			b += tag :br
		end
		
		b += content_tag :span do
			view_permission_string(media_entry)
		end
	end

end %>
